<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_business_center_large" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextNombreEntidadRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_business_center"
                        android:ems="15"
                        android:hint="Nombre entidad"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextDireccionEntidadRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_location"
                        android:ems="15"
                        android:hint="Dirección domicilio entidad"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextTelefonoUnoRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_phone_iphone"
                        android:ems="15"
                        android:hint="Número telefónico"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextTelefonoDosEntidadRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_local_phone"
                        android:ems="15"
                        android:hint="Otros teléfonos"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextEmailEntidadRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_email"
                        android:ems="15"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>