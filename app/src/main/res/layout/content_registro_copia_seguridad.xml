<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLogoServicioRegCopiaSeguridad"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_backup_large" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <Spinner
                        android:id="@+id/spinnerServicios"
                        style="@android:style/Widget.Material.Light.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dropdown" />

                    <EditText
                        android:id="@+id/editTextNombreServicioRegistroCopiaSeguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_backup"
                        android:ems="15"
                        android:hint="Nombre del servicio"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextEmailServicioRegistroCopiaSeguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_email"
                        android:ems="15"
                        android:hint="Email del servicio"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextClaveServicioRegistroCopiaSeguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_key"
                        android:ems="15"
                        android:hint="Contraseña"
                        android:inputType="textVisiblePassword|textPersonName|textCapWords|textCapCharacters"
                        android:maxLength="10"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextResponsableServicioRegistroCopiaSeguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_assignment"
                        android:ems="15"
                        android:hint="Responsable"
                        android:inputType="textPersonName|textCapWords|textCapCharacters"
                        android:maxLength="10"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <EditText
                        android:id="@+id/editTextEmailResponsableServicioRegistroCopiaSeguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_contact_mail"
                        android:ems="15"
                        android:hint="Email del responsable"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="15sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:cursorVisible="true"
                            android:focusable="true"
                            android:text="¿Servicio activo?"
                            android:textColor="@color/colorPrimaryLight" />

                        <Switch
                            android:id="@+id/switchActivoServicioRegistroCopiaSeguridad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorPrimaryLight"
                            android:textOff="No"
                            android:textOn="Sí" />

                    </LinearLayout>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>