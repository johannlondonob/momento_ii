<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:minWidth="30dp"
            android:minHeight="30dp"
            app:srcCompat="@drawable/ic_face_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombresApellidosItemLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCargoItemLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_assignment__medium_light"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/textViewTelefonoUnoItemLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_local_phone_medium_light"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewTelefonoDosItemLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_phone_iphone_medium_light"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>