<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center|start"
                    android:text="Detalles"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <!--<TextView
                    android:id="@+id/textViewNombreEntidadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Dirección"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDireccionEntidadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="none"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Teléfono uno"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewTelefonoUnoEntidadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="none"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Teléfono dos"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewTelefonoDosEntidadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="none"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewEmailEntidadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="none"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>